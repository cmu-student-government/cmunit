{
  "manifest_version": 2,

  "name": "CMUnits",
  "description": "Extends CMU Student Information Online interface with more data",
  "author": "Marat Valiev",
  "version": "0.0.1.4",

  "content_scripts": [
    {
      "matches": ["https://s3.andrew.cmu.edu/sio/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": {
      "128": "icon.png"
    },
    "default_title": "About CMUnits",
    "default_popup": "options.html"
  },
  "icons": {
      "128": "icon.png"
  },

  "permissions": [
    "https://cmu-student-government.github.io/",
    "activeTab",
    "storage"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "cmunits-gecko@sterdam.com"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }

}
